@model WowCombatStats.Models.VIewModels.LoginVM

@{
	Layout = "_Layout";
	ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="row justify-content-center">
	<div class="col-md-4 p-4">
		<div class="">
			<div class="text-center">
				<h3>Sign in to WoWCombatStats</h3>
			</div>

			<form asp-controller="Auth" asp-action="Login" method="post" asp-route-returnUrl="@Model.ReturnUrl" accept-charset="UTF-8" class="px-3" id="login-form">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="">
					<div class="form-group mb-4">
						<label for="login_field">
							Username
						</label>
						<input type="text" name="login" class="form-control input-block" tabindex="1" autocapitalize="off" autocorrect="off" autocomplete="username" autofocus="autofocus">
						<span asp-validation-for="Login" class="text-danger"></span>
					</div>

					<div class="form-group mb-4">
						<label for="password">
							Password
						</label>
						<input type="password" name="password" class="form-control form-control input-block" tabindex="2" autocomplete="current-password">
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>

					<input type="submit" value="Sign in" tabindex="3" class="btn col-12 btn-outline-secondary btn-block form-group">

					<div class="row justify-content-between">
						<label class="checkbox-inline mt-2 col-6" asp-for="isPersistent">
							<input asp-for="isPersistent"> Remember me
						</label>
						<a class="col-auto mt-2" href="#">Forgot Password?</a>
					</div>
				</div>
			</form>

			<p class="text-center" id="create-account">
				New User?
				<a asp-controller="Auth" asp-action="Registration">Create an account</a>.
			</p>
		</div>
	</div>
</div>

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
